<h1>Listing Rooms</h1>

<% @rooms.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |room| %>
      <div class="col-md-4">
        <%= image_tag room.picture_url(:thumb) if room.picture.present? %>
        <h4><%= link_to room.name, room %></h4>
        <%= room.description %>
      </div>
    <% end %>
  </div>
<% end %>